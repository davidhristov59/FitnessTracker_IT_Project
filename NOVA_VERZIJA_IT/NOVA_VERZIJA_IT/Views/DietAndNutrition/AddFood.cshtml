@model NOVA_VERZIJA_IT.Models.FoodItemViewModel


@{
    ViewBag.Title = "AddFood";
}

<h3 class="text-center">Add Food</h3>

<div class="container d-flex justify-content-center align-items-center ">

    <div class="col-md-6">

        <div class="card mt-5 border border-dark">
            
            <div class="card-body">

                @using (Html.BeginForm("AddFood", "DietAndNutrition", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    
                <div class="form-horizontal">

                    <div class="form-group justify-content-center">

                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.ServingSize)
                        @Html.TextBoxFor(m => m.ServingSize, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Protein)
                        @Html.TextBoxFor(m => m.Protein, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Carbs)
                        @Html.TextBoxFor(m => m.Carbs, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Fats)
                        @Html.TextBoxFor(m => m.Fats, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Calories)
                        @Html.TextBoxFor(m => m.Calories, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.ImageUrl)
                        @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })

                    </div>

                    <div class="form-group">

                        @Html.LabelFor(m => m.Ingredients)
                        @Html.TextBoxFor(m => m.Ingredients, new { @class = "form-control", rows = 3 })

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MealType)
                        @Html.DropDownListFor(m => m.MealType, new SelectList(new[]
                        {
                            new { Value = "Breakfast", Text = "Breakfast" },
                            new { Value = "Lunch", Text = "Lunch" },
                            new { Value = "Dinner", Text = "Dinner" },
                            new { Value = "Snack", Text = "Snack" }
                        }, "Value", "Text"), "Select a meal type", new { @class = "form-control" })

                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                }
            </div>

        </div>
    </div>
</div>

