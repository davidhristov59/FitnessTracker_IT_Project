@model NOVA_VERZIJA_IT.Models.WeeklyExercise

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    <h2 class="text-center">Delete Exercise</h2>

    <!--bootbox da stavam tuka -->
    <div class="alert alert-warning">

        <h4>Are you sure you want to delete this exercise</h4>
        <p>@Model.Exercise.Name - @Model.Sets sets, @Model.Reps reps</p>

        @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken();
                <input type="submit" value="Delete" class="btn btn-danger"/>
                <a href="@Url.Action("Details", new {id = Model.WorkoutPlanID})" class="btn btn-secondary">Cancel</a>
            }

    </div>

</div>

